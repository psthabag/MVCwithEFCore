@model IEnumerable<MVCwithEFCore.Models.Student>

@{
    ViewData["Title"] = "ViewStudents";
}

<h1>View Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var student in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => student.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => student.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => student.Phone)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => student.Address)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="AddStudent" class="btn btn-primary">Add Student</a>
</p>
